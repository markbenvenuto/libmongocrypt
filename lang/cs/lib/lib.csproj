<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard1.6</TargetFramework>
    <Platforms>x64</Platforms>
  </PropertyGroup>

  <PropertyGroup>
    <AssemblyName>MongoDB.Crypt</AssemblyName>
    <AssemblyTitle>MongoDB.Crypt</AssemblyTitle>
    <Product>MongoDB.Crypt</Product>
    <Company>MongoDB Inc.</Company>
    <Copyright>Copyright © 2019-present MongoDB Inc.</Copyright>
    <Description>Official MongoDB supported driver for MongoDB.  See http://www.mongodb.org/display/DOCS/CSharp+Language+Center for more details.</Description>
    <Authors>markbenvenuto</Authors>
    <PackageIconUrl>http://jobs.mongodb.org/files/logos/889002/889002.png</PackageIconUrl>
    <!-- <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance> -->
    <PackageDescription>Official .NET driver for MongoDB.</PackageDescription>
    <PackageProjectUrl>http://www.mongodb.org/display/DOCS/CSharp+Language+Center</PackageProjectUrl>
    <!-- <PackageLicenseFile>License.txt</PackageLicenseFile> -->
    <PackageTags>mongodb;mongo;nosql</PackageTags>
    <PackageLanguage>en-US</PackageLanguage>
    <IncludeSymbols>true</IncludeSymbols>

    <MDBDeveloperDirectory>../../../build/Debug</MDBDeveloperDirectory>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|x64'">
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>

    <Content Include="$(MDBDeveloperDirectory)/libmongocrypt.so" Condition="'$(Configuration)'=='Debug' And Exists('$(MDBDeveloperDirectory)/libmongocrypt.so')">
      <Link>libmongocrypt.so</Link>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>

    <Content Include="$(MDBDeveloperDirectory)/libmongocrypt.dylib" Condition="'$(Configuration)'=='Debug' And Exists('$(MDBDeveloperDirectory)/libmongocrypt.dylib')">
      <Link>libmongocrypt.dylib</Link>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>

    <Content Include="$(MDBDeveloperDirectory)/mongocrypt.dll" Condition="'$(Configuration)'=='Debug' And Exists('$(MDBDeveloperDirectory)/mongocrypt.dll')">
      <Link>mongocrypt.dll</Link>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <Import Project="Package.csproj.include" Condition="Exists('Package.csproj.include')" />

</Project>
